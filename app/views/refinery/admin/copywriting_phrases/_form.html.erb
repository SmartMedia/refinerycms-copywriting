<%= form_for [main_app, :refinery_admin, @copywriting_phrase] do |f| -%>
  <%= hidden_field_tag :switch_locale, @current_locale %>
  <%= hidden_field_tag :filter_scope, @scope if @scope %>

  <%= render :partial => "/refinery/admin/error_messages", :locals => {
          :object => @copywriting_phrase,
          :include_object_name => true
        } %>

  <%= render :partial => '/refinery/admin/shared/copywriting_phrases/value_field', :locals => {:f => f} %>

  <%= render :partial => "/refinery/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'refinery.admin.copywriting.phrase'),
                :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @copywriting_phrase.name)
              } %>
<% end -%>
